<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="GFMS.Pages.FileProgressPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GFMS.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 页面标题 -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="档案转递流程" 
                          FontSize="32" 
                          FontWeight="Bold"
                          Margin="0,0,0,10"/>
                <TextBlock Text="处理调档申请、档案整理和转递记录" 
                          FontSize="14" 
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <!-- 主要内容区域 -->
            <Grid Grid.Row="1">
                <Pivot x:Name="FileProgressPivot">
                    
                    <!-- 调档申请标签页 -->
                    <PivotItem Header="调档申请">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- 申请操作区 -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="0,0,0,20">
                                <Button Content="新增申请" Style="{StaticResource AccentButtonStyle}" Click="AddApplicationButton_Click"/>
                                <ComboBox PlaceholderText="申请状态" Width="120" SelectionChanged="ApplicationStatusComboBox_SelectionChanged">
                                    <ComboBoxItem Content="待审核"/>
                                    <ComboBoxItem Content="已通过"/>
                                    <ComboBoxItem Content="已拒绝"/>
                                    <ComboBoxItem Content="全部"/>
                                </ComboBox>
                                <DatePicker Width="150"/>
                                <Button Content="导出申请单" Click="ExportApplicationButton_Click"/>
                            </StackPanel>

                            <!-- 申请列表和详情 -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="400"/>
                                </Grid.ColumnDefinitions>

                                <!-- 左侧申请列表 -->
                                <Border Grid.Column="0" 
                                       Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                                       CornerRadius="8" 
                                       Padding="0"
                                       Margin="0,0,10,0">
                                    <ListView x:Name="ApplicationList">
                                        <ListView.Header>
                                            <Grid Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" 
                                                 Padding="15,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="200"/>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="学号" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="1" Text="姓名" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="2" Text="接收单位" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="3" Text="申请时间" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="4" Text="状态" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="5" Text="操作" FontWeight="SemiBold"/>
                                            </Grid>
                                        </ListView.Header>
                                        
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Padding="15,10">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="100"/>
                                                        <ColumnDefinition Width="120"/>
                                                        <ColumnDefinition Width="200"/>
                                                        <ColumnDefinition Width="120"/>
                                                        <ColumnDefinition Width="100"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="2021001" VerticalAlignment="Center"/>
                                                    <TextBlock Grid.Column="1" Text="张三" VerticalAlignment="Center"/>
                                                    <TextBlock Grid.Column="2" Text="华为技术有限公司" VerticalAlignment="Center"/>
                                                    <TextBlock Grid.Column="3" Text="2024-01-15" VerticalAlignment="Center"/>
                                                    <Border Grid.Column="4" 
                                                           Background="#FF9800" 
                                                           CornerRadius="8" 
                                                           Padding="6,2"
                                                           HorizontalAlignment="Center">
                                                        <TextBlock Text="待审核" 
                                                                  Foreground="White" 
                                                                  FontSize="11"/>
                                                    </Border>
                                                    <Button Grid.Column="5" 
                                                           Content="处理" 
                                                           Style="{StaticResource AccentButtonStyle}"
                                                           FontSize="12"
                                                           Padding="10,4"
                                                           HorizontalAlignment="Left"
                                                           Click="ProcessApplicationButton_Click"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </Border>

                                <!-- 右侧申请详情面板 -->
                                <Border Grid.Column="1" 
                                       Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                                       CornerRadius="8" 
                                       Padding="20"
                                       Margin="10,0,0,0">
                                    <ScrollViewer>
                                        <StackPanel Spacing="15">
                                            <TextBlock Text="调档申请详情" 
                                                      FontSize="18" 
                                                      FontWeight="SemiBold"/>
                                            
                                            <!-- 申请人信息 -->
                                            <StackPanel Spacing="8">
                                                <TextBlock Text="申请人信息" 
                                                          FontSize="14" 
                                                          FontWeight="SemiBold" 
                                                          Foreground="{ThemeResource SystemAccentColor}"/>
                                                <TextBox Header="学号" Text="2021001" IsReadOnly="True"/>
                                                <TextBox Header="姓名" Text="张三" IsReadOnly="True"/>
                                                <TextBox Header="专业" Text="计算机科学与技术" IsReadOnly="True"/>
                                                <TextBox Header="联系电话" Text="13800138000"/>
                                                <TextBox Header="邮箱地址" Text="zhangsan@email.com"/>
                                            </StackPanel>

                                            <!-- 接收单位信息 -->
                                            <StackPanel Spacing="8">
                                                <TextBlock Text="接收单位信息" 
                                                          FontSize="14" 
                                                          FontWeight="SemiBold" 
                                                          Foreground="{ThemeResource SystemAccentColor}"/>
                                                <TextBox Header="单位名称" Text="华为技术有限公司"/>
                                                <TextBox Header="单位地址" Text="深圳市龙岗区坂田华为基地"/>
                                                <TextBox Header="联系人" Text="李经理"/>
                                                <TextBox Header="联系电话" Text="0755-12345678"/>
                                                <TextBox Header="邮政编码" Text="518129"/>
                                            </StackPanel>

                                            <!-- 申请说明 -->
                                            <StackPanel Spacing="8">
                                                <TextBlock Text="申请说明" 
                                                          FontSize="14" 
                                                          FontWeight="SemiBold" 
                                                          Foreground="{ThemeResource SystemAccentColor}"/>
                                                <TextBox Header="申请原因" 
                                                        Text="入职需要"
                                                        AcceptsReturn="True"
                                                        Height="60"/>
                                                <DatePicker Header="需要时间"/>
                                            </StackPanel>

                                            <!-- 附件材料 -->
                                            <StackPanel Spacing="8">
                                                <TextBlock Text="附件材料" 
                                                          FontSize="14" 
                                                          FontWeight="SemiBold" 
                                                          Foreground="{ThemeResource SystemAccentColor}"/>
                                                <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                                       CornerRadius="6"
                                                       Padding="10">
                                                    <StackPanel Spacing="5">
                                                        <TextBlock Text="• 接收函.pdf" FontSize="12"/>
                                                        <TextBlock Text="• 身份证复印件.jpg" FontSize="12"/>
                                                    </StackPanel>
                                                </Border>
                                            </StackPanel>

                                            <!-- 审核操作 -->
                                            <StackPanel Spacing="10">
                                                <TextBlock Text="审核意见" 
                                                          FontSize="14" 
                                                          FontWeight="SemiBold" 
                                                          Foreground="{ThemeResource SystemAccentColor}"/>
                                                <TextBox PlaceholderText="请输入审核意见..." 
                                                        AcceptsReturn="True"
                                                        Height="60"/>
                                                
                                                <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                                                    <Button Content="批准" 
                                                           Background="#4CAF50"
                                                           Foreground="White"
                                                           Padding="15,8"
                                                           Click="ApproveApplicationButton_Click"/>
                                                    <Button Content="拒绝" 
                                                           Background="#F44336"
                                                           Foreground="White"
                                                           Padding="15,8"
                                                           Click="RejectApplicationButton_Click"/>
                                                    <Button Content="暂存" 
                                                           Padding="15,8"
                                                           Click="SaveDraftApplicationButton_Click"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                    </ScrollViewer>
                                </Border>
                            </Grid>
                        </Grid>
                    </PivotItem>

                    <!-- 档案整理标签页 -->
                    <PivotItem Header="档案整理">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- 整理操作区 -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="0,0,0,20">
                                <Button Content="生成调档函" Style="{StaticResource AccentButtonStyle}" Click="GenerateTransferLetterButton_Click"/>
                                <Button Content="打印标签" Click="PrintLabelButton_Click"/>
                                <ComboBox PlaceholderText="整理状态" Width="120" SelectionChanged="OrganizeStatusComboBox_SelectionChanged">
                                    <ComboBoxItem Content="待整理"/>
                                    <ComboBoxItem Content="整理中"/>
                                    <ComboBoxItem Content="已完成"/>
                                </ComboBox>
                                <Button Content="批量操作" Click="BatchOperationButton_Click"/>
                            </StackPanel>

                            <!-- 整理任务列表 -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="350"/>
                                </Grid.ColumnDefinitions>

                                <!-- 左侧任务列表 -->
                                <Border Grid.Column="0" 
                                       Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                                       CornerRadius="8" 
                                       Padding="0"
                                       Margin="0,0,10,0">
                                    <ListView x:Name="OrganizeTaskList">
                                        <ListView.Header>
                                            <Grid Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" 
                                                 Padding="15,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="200"/>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="学号" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="1" Text="姓名" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="2" Text="接收单位" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="3" Text="截止时间" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="4" Text="状态" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="5" Text="进度" FontWeight="SemiBold"/>
                                            </Grid>
                                        </ListView.Header>
                                        
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Padding="15,10">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="100"/>
                                                        <ColumnDefinition Width="120"/>
                                                        <ColumnDefinition Width="200"/>
                                                        <ColumnDefinition Width="120"/>
                                                        <ColumnDefinition Width="100"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="2021001" VerticalAlignment="Center"/>
                                                    <TextBlock Grid.Column="1" Text="张三" VerticalAlignment="Center"/>
                                                    <TextBlock Grid.Column="2" Text="华为技术有限公司" VerticalAlignment="Center"/>
                                                    <TextBlock Grid.Column="3" Text="2024-02-01" VerticalAlignment="Center"/>
                                                    <Border Grid.Column="4" 
                                                           Background="#2196F3" 
                                                           CornerRadius="8" 
                                                           Padding="6,2"
                                                           HorizontalAlignment="Center">
                                                        <TextBlock Text="整理中" 
                                                                  Foreground="White" 
                                                                  FontSize="11"/>
                                                    </Border>
                                                    <ProgressBar Grid.Column="5" 
                                                                Value="75" 
                                                                Maximum="100"
                                                                Height="8"
                                                                Margin="10,0"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </Border>

                                <!-- 右侧整理详情面板 -->
                                <Border Grid.Column="1" 
                                       Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                                       CornerRadius="8" 
                                       Padding="20"
                                       Margin="10,0,0,0">
                                    <ScrollViewer>
                                        <StackPanel Spacing="15">
                                            <TextBlock Text="档案整理进度" 
                                                      FontSize="18" 
                                                      FontWeight="SemiBold"/>
                                            
                                            <!-- 基本信息 -->
                                            <StackPanel Spacing="8">
                                                <TextBlock Text="基本信息" 
                                                          FontSize="14" 
                                                          FontWeight="SemiBold" 
                                                          Foreground="{ThemeResource SystemAccentColor}"/>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    
                                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="学号：" Margin="0,0,10,5"/>
                                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="2021001" Margin="0,0,0,5"/>
                                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="姓名：" Margin="0,0,10,5"/>
                                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="张三" Margin="0,0,0,5"/>
                                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="接收单位：" Margin="0,0,10,5"/>
                                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="华为技术有限公司" Margin="0,0,0,5"/>
                                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="调档函号：" Margin="0,0,10,0"/>
                                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="DF2024001"/>
                                                </Grid>
                                            </StackPanel>

                                            <!-- 整理清单 -->
                                            <StackPanel Spacing="8">
                                                <TextBlock Text="材料清单" 
                                                          FontSize="14" 
                                                          FontWeight="SemiBold" 
                                                          Foreground="{ThemeResource SystemAccentColor}"/>
                                                
                                                <StackPanel Spacing="5">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <CheckBox Grid.Column="0" IsChecked="True" Margin="0,0,10,0" 
                                                                 x:Name="GraduateFormCheckBox" 
                                                                 Checked="MaterialCheckBox_Checked" 
                                                                 Unchecked="MaterialCheckBox_Unchecked"/>
                                                        <TextBlock Grid.Column="1" Text="毕业生登记表" VerticalAlignment="Center"/>
                                                        <FontIcon Grid.Column="2" x:Name="GraduateFormIcon" Glyph="&#xE73E;" Foreground="#4CAF50"/>
                                                    </Grid>
                                                    
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <CheckBox Grid.Column="0" IsChecked="True" Margin="0,0,10,0" 
                                                                 x:Name="TranscriptCheckBox" 
                                                                 Checked="MaterialCheckBox_Checked" 
                                                                 Unchecked="MaterialCheckBox_Unchecked"/>
                                                        <TextBlock Grid.Column="1" Text="成绩单" VerticalAlignment="Center"/>
                                                        <FontIcon Grid.Column="2" x:Name="TranscriptIcon" Glyph="&#xE73E;" Foreground="#4CAF50"/>
                                                    </Grid>
                                                    
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <CheckBox Grid.Column="0" IsChecked="False" Margin="0,0,10,0" 
                                                                 x:Name="MedicalCheckBox" 
                                                                 Checked="MaterialCheckBox_Checked" 
                                                                 Unchecked="MaterialCheckBox_Unchecked"/>
                                                        <TextBlock Grid.Column="1" Text="体检表" VerticalAlignment="Center"/>
                                                        <FontIcon Grid.Column="2" x:Name="MedicalIcon" Glyph="&#xE711;" Foreground="#FF9800"/>
                                                    </Grid>
                                                    
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <CheckBox Grid.Column="0" IsChecked="True" Margin="0,0,10,0" 
                                                                 x:Name="RewardPunishmentCheckBox" 
                                                                 Checked="MaterialCheckBox_Checked" 
                                                                 Unchecked="MaterialCheckBox_Unchecked"/>
                                                        <TextBlock Grid.Column="1" Text="奖惩材料" VerticalAlignment="Center"/>
                                                        <FontIcon Grid.Column="2" x:Name="RewardPunishmentIcon" Glyph="&#xE73E;" Foreground="#4CAF50"/>
                                                    </Grid>
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- 整理进度 -->
                                            <StackPanel Spacing="8">
                                                <TextBlock Text="整理进度" 
                                                          FontSize="14" 
                                                          FontWeight="SemiBold" 
                                                          Foreground="{ThemeResource SystemAccentColor}"/>
                                                <ProgressBar x:Name="OrganizeProgressBar" Value="75" Maximum="100" Height="12"/>
                                                <TextBlock x:Name="OrganizeProgressText" 
                                                          Text="75% 完成 (3/4 项)" 
                                                          FontSize="12"
                                                          HorizontalAlignment="Center"/>
                                            </StackPanel>

                                            <!-- 操作按钮 -->
                                            <StackPanel Spacing="10" Margin="0,20,0,0">
                                                <Button Content="生成调档函" 
                                                       Style="{StaticResource AccentButtonStyle}"
                                                       HorizontalAlignment="Stretch"
                                                       Click="GenerateTransferLetterDetailButton_Click"/>
                                                <Button Content="打印档案袋标签" 
                                                       HorizontalAlignment="Stretch"
                                                       Click="PrintArchiveLabelButton_Click"/>
                                                <Button Content="标记完成" 
                                                       HorizontalAlignment="Stretch"
                                                       Click="MarkCompleteButton_Click"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </ScrollViewer>
                                </Border>
                            </Grid>
                        </Grid>
                    </PivotItem>

                    <!-- 转递记录标签页 -->
                    <PivotItem Header="转递记录">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- 记录操作区 -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="0,0,0,20">
                                <Button Content="记录寄出" Style="{StaticResource AccentButtonStyle}" Click="RecordShipmentButton_Click"/>
                                <Button Content="批量录入快递单号" Click="BatchInputTrackingButton_Click"/>
                                <ComboBox PlaceholderText="转递状态" Width="120" SelectionChanged="TransferStatusComboBox_SelectionChanged">
                                    <ComboBoxItem Content="已寄出"/>
                                    <ComboBoxItem Content="运输中"/>
                                    <ComboBoxItem Content="已签收"/>
                                    <ComboBoxItem Content="全部"/>
                                </ComboBox>
                                <Button Content="导出转递清单" Click="ExportTransferListButton_Click"/>
                            </StackPanel>

                            <!-- 转递记录列表 -->
                            <Border Grid.Row="1" 
                                   Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                                   CornerRadius="8" 
                                   Padding="0">
                                <ListView x:Name="TransferRecordList">
                                    <ListView.Header>
                                        <Grid Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" 
                                             Padding="15,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="200"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="150"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="学号" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="1" Text="姓名" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="2" Text="接收单位" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="3" Text="寄出日期" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="4" Text="快递单号" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="5" Text="快递公司" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="6" Text="状态" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="7" Text="操作" FontWeight="SemiBold"/>
                                        </Grid>
                                    </ListView.Header>
                                    
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Padding="15,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="200"/>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="150"/>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="2021001" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="1" Text="张三" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="2" Text="华为技术有限公司" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="3" Text="2024-01-25" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="4" Text="SF123456789" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="5" Text="顺丰速运" VerticalAlignment="Center"/>
                                                <Border Grid.Column="6" 
                                                       Background="#4CAF50" 
                                                       CornerRadius="8" 
                                                       Padding="6,2"
                                                       HorizontalAlignment="Center">
                                                    <TextBlock Text="已签收" 
                                                              Foreground="White" 
                                                              FontSize="11"/>
                                                </Border>
                                                <StackPanel Grid.Column="7" 
                                                           Orientation="Horizontal" 
                                                           Spacing="5">
                                                    <Button Content="跟踪" 
                                                           Style="{StaticResource AccentButtonStyle}"
                                                           FontSize="11"
                                                           Padding="8,4"
                                                           Click="TrackPackageButton_Click"/>
                                                    <Button Content="详情" 
                                                           FontSize="11"
                                                           Padding="8,4"
                                                           Click="ViewDetailsButton_Click"/>
                                                </StackPanel>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Border>
                        </Grid>
                    </PivotItem>
                </Pivot>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
