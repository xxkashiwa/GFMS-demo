<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="GFMS.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:GFMS.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  欢迎标题区域  -->
            <Grid Grid.Row="0" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontSize="32"
                        FontWeight="Bold"
                        Text="欢迎使用毕业档案管理系统" />
                    <TextBlock
                        FontSize="14"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="Graduate File Management System (GFMS)" />
                    <TextBlock
                        x:Name="WelcomeUserText"
                        Margin="0,10,0,0"
                        FontSize="16"
                        Foreground="{ThemeResource SystemAccentColor}"
                        Text="欢迎您，管理员！" />
                </StackPanel>

                <Button
                    Grid.Column="1"
                    VerticalAlignment="Top"
                    Click="Button_Click">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon FontSize="16" Glyph="&#xE7E8;" />
                        <TextBlock Text="退出登录" />
                    </StackPanel>
                </Button>
            </Grid>

            <!--  统计卡片区域  -->
            <Grid Grid.Row="1" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  总学生数卡片  -->
                <Border
                    Grid.Column="0"
                    Margin="0,0,10,0"
                    Padding="20"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="12">
                    <StackPanel>
                        <StackPanel
                            Margin="0,0,0,10"
                            Orientation="Horizontal"
                            Spacing="10">
                            <Border
                                Padding="8"
                                Background="#E3F2FD"
                                CornerRadius="8">
                                <FontIcon
                                    FontSize="20"
                                    Foreground="#2196F3"
                                    Glyph="&#xE8D4;" />
                            </Border>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="总学生数" />
                        </StackPanel>
                        <TextBlock
                            FontSize="32"
                            FontWeight="Bold"
                            Foreground="#2196F3"
                            Text="1,284" />
                        <TextBlock
                            Margin="0,5,0,0"
                            FontSize="12"
                            Foreground="#4CAF50"
                            Text="较去年同期增长 8.5%" />
                    </StackPanel>
                </Border>

                <!--  档案完成率卡片  -->
                <Border
                    Grid.Column="1"
                    Margin="5,0,5,0"
                    Padding="20"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="12">
                    <StackPanel>
                        <StackPanel
                            Margin="0,0,0,10"
                            Orientation="Horizontal"
                            Spacing="10">
                            <Border
                                Padding="8"
                                Background="#E8F5E8"
                                CornerRadius="8">
                                <FontIcon
                                    FontSize="20"
                                    Foreground="#4CAF50"
                                    Glyph="&#xE73E;" />
                            </Border>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="档案完成率" />
                        </StackPanel>
                        <TextBlock
                            FontSize="32"
                            FontWeight="Bold"
                            Foreground="#4CAF50"
                            Text="92.6%" />
                        <ProgressBar
                            Height="6"
                            Margin="0,8,0,0"
                            Maximum="100"
                            Value="92.6" />
                    </StackPanel>
                </Border>

                <!--  待处理事项卡片  -->
                <Border
                    Grid.Column="2"
                    Margin="5,0,5,0"
                    Padding="20"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="12">
                    <StackPanel>
                        <StackPanel
                            Margin="0,0,0,10"
                            Orientation="Horizontal"
                            Spacing="10">
                            <Border
                                Padding="8"
                                Background="#FFF3E0"
                                CornerRadius="8">
                                <FontIcon
                                    FontSize="20"
                                    Foreground="#FF9800"
                                    Glyph="&#xE7BA;" />
                            </Border>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="待处理事项" />
                        </StackPanel>
                        <TextBlock
                            FontSize="32"
                            FontWeight="Bold"
                            Foreground="#FF9800"
                            Text="47" />
                        <TextBlock
                            Margin="0,5,0,0"
                            FontSize="12"
                            Foreground="#FF9800"
                            Text="需要及时处理" />
                    </StackPanel>
                </Border>

                <!--  本月转递卡片  -->
                <Border
                    Grid.Column="3"
                    Margin="10,0,0,0"
                    Padding="20"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="12">
                    <StackPanel>
                        <StackPanel
                            Margin="0,0,0,10"
                            Orientation="Horizontal"
                            Spacing="10">
                            <Border
                                Padding="8"
                                Background="#F3E5F5"
                                CornerRadius="8">
                                <FontIcon
                                    FontSize="20"
                                    Foreground="#9C27B0"
                                    Glyph="&#xE72A;" />
                            </Border>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="本月转递" />
                        </StackPanel>
                        <TextBlock
                            FontSize="32"
                            FontWeight="Bold"
                            Foreground="#9C27B0"
                            Text="156" />
                        <TextBlock
                            Margin="0,5,0,0"
                            FontSize="12"
                            Foreground="#4CAF50"
                            Text="较上月增长 12%" />
                    </StackPanel>
                </Border>
            </Grid>

            <!--  快速操作区域  -->
            <Grid Grid.Row="2" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  左侧快速操作  -->
                <Border
                    Grid.Column="0"
                    Margin="0,0,10,0"
                    Padding="20"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="12">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,15"
                            FontSize="18"
                            FontWeight="SemiBold"
                            Text="快速操作" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Button
                                Grid.Row="0"
                                Grid.Column="0"
                                Height="80"
                                Margin="0,0,5,10"
                                Style="{StaticResource AccentButtonStyle}">
                                <StackPanel Spacing="8">
                                    <FontIcon FontSize="24" Glyph="&#xE8FA;" />
                                    <TextBlock FontSize="12" Text="新增学生" />
                                </StackPanel>
                            </Button>

                            <Button
                                Grid.Row="0"
                                Grid.Column="1"
                                Height="80"
                                Margin="5,0,0,10">
                                <StackPanel Spacing="8">
                                    <FontIcon FontSize="24" Glyph="&#xE8E5;" />
                                    <TextBlock FontSize="12" Text="批量导入" />
                                </StackPanel>
                            </Button>

                            <Button
                                Grid.Row="1"
                                Grid.Column="0"
                                Height="80"
                                Margin="0,0,5,10">
                                <StackPanel Spacing="8">
                                    <FontIcon FontSize="24" Glyph="&#xE8A5;" />
                                    <TextBlock FontSize="12" Text="档案管理" />
                                </StackPanel>
                            </Button>

                            <Button
                                Grid.Row="1"
                                Grid.Column="1"
                                Height="80"
                                Margin="5,0,0,10">
                                <StackPanel Spacing="8">
                                    <FontIcon FontSize="24" Glyph="&#xE72A;" />
                                    <TextBlock FontSize="12" Text="档案转递" />
                                </StackPanel>
                            </Button>

                            <Button
                                Grid.Row="2"
                                Grid.Column="0"
                                Height="80"
                                Margin="0,0,5,0">
                                <StackPanel Spacing="8">
                                    <FontIcon FontSize="24" Glyph="&#xE721;" />
                                    <TextBlock FontSize="12" Text="查询服务" />
                                </StackPanel>
                            </Button>

                            <Button
                                Grid.Row="2"
                                Grid.Column="1"
                                Height="80"
                                Margin="5,0,0,0">
                                <StackPanel Spacing="8">
                                    <FontIcon FontSize="24" Glyph="&#xE9D2;" />
                                    <TextBlock FontSize="12" Text="统计报表" />
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>

                <!--  右侧最新动态  -->
                <Border
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    Padding="20"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="12">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,15"
                            FontSize="18"
                            FontWeight="SemiBold"
                            Text="最新动态" />

                        <ListView>
                            <ListViewItem>
                                <StackPanel Spacing="5">
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <Border
                                            Padding="6"
                                            Background="#E3F2FD"
                                            CornerRadius="6">
                                            <FontIcon
                                                FontSize="12"
                                                Foreground="#2196F3"
                                                Glyph="&#xE8FA;" />
                                        </Border>
                                        <TextBlock FontWeight="SemiBold" Text="新增了 15 名学生档案" />
                                    </StackPanel>
                                    <TextBlock
                                        Margin="28,0,0,0"
                                        FontSize="12"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        Text="2024年1月26日 14:30" />
                                </StackPanel>
                            </ListViewItem>

                            <ListViewItem>
                                <StackPanel Spacing="5">
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <Border
                                            Padding="6"
                                            Background="#E8F5E8"
                                            CornerRadius="6">
                                            <FontIcon
                                                FontSize="12"
                                                Foreground="#4CAF50"
                                                Glyph="&#xE73E;" />
                                        </Border>
                                        <TextBlock FontWeight="SemiBold" Text="12 份档案材料审核通过" />
                                    </StackPanel>
                                    <TextBlock
                                        Margin="28,0,0,0"
                                        FontSize="12"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        Text="2024年1月26日 11:45" />
                                </StackPanel>
                            </ListViewItem>

                            <ListViewItem>
                                <StackPanel Spacing="5">
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <Border
                                            Padding="6"
                                            Background="#F3E5F5"
                                            CornerRadius="6">
                                            <FontIcon
                                                FontSize="12"
                                                Foreground="#9C27B0"
                                                Glyph="&#xE72A;" />
                                        </Border>
                                        <TextBlock FontWeight="SemiBold" Text="8 份档案已完成转递" />
                                    </StackPanel>
                                    <TextBlock
                                        Margin="28,0,0,0"
                                        FontSize="12"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        Text="2024年1月26日 09:20" />
                                </StackPanel>
                            </ListViewItem>

                            <ListViewItem>
                                <StackPanel Spacing="5">
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <Border
                                            Padding="6"
                                            Background="#FFF3E0"
                                            CornerRadius="6">
                                            <FontIcon
                                                FontSize="12"
                                                Foreground="#FF9800"
                                                Glyph="&#xE7BA;" />
                                        </Border>
                                        <TextBlock FontWeight="SemiBold" Text="5 个调档申请待处理" />
                                    </StackPanel>
                                    <TextBlock
                                        Margin="28,0,0,0"
                                        FontSize="12"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        Text="2024年1月25日 16:15" />
                                </StackPanel>
                            </ListViewItem>
                        </ListView>
                    </StackPanel>
                </Border>
            </Grid>

            <!--  图表展示区域  -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  左侧趋势图表  -->
                <Border
                    Grid.Column="0"
                    Margin="0,0,10,0"
                    Padding="20"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="12">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,20"
                            FontSize="18"
                            FontWeight="SemiBold"
                            Text="档案处理趋势" />

                        <Border
                            Height="250"
                            Padding="20"
                            Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                            CornerRadius="8">
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Spacing="15">
                                <FontIcon
                                    FontSize="48"
                                    Foreground="{ThemeResource SystemAccentColor}"
                                    Glyph="&#xE9D2;" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="18"
                                    FontWeight="SemiBold"
                                    Text="档案处理趋势图表" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="14"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="此处将显示近30天的档案处理趋势图表" />
                                <Button Content="查看详细报表" Style="{StaticResource AccentButtonStyle}" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!--  右侧任务提醒  -->
                <Border
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    Padding="20"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="12">
                    <StackPanel>
                        <StackPanel
                            Margin="0,0,0,15"
                            Orientation="Horizontal"
                            Spacing="10">
                            <TextBlock
                                FontSize="18"
                                FontWeight="SemiBold"
                                Text="待办任务" />
                            <Border
                                Padding="6,2"
                                Background="#FF5722"
                                CornerRadius="10">
                                <TextBlock
                                    FontSize="12"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="5" />
                            </Border>
                        </StackPanel>

                        <StackPanel Spacing="10">
                            <Border
                                Padding="12"
                                Background="#FFF9F2"
                                CornerRadius="8">
                                <StackPanel Spacing="5">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon
                                            FontSize="16"
                                            Foreground="#FF9800"
                                            Glyph="&#xE7BA;" />
                                        <TextBlock FontWeight="SemiBold" Text="材料审核" />
                                    </StackPanel>
                                    <TextBlock FontSize="12" Text="12 份材料等待审核" />
                                    <Button
                                        Padding="10,6"
                                        HorizontalAlignment="Left"
                                        Content="立即处理"
                                        FontSize="12"
                                        Style="{StaticResource AccentButtonStyle}" />
                                </StackPanel>
                            </Border>

                            <Border
                                Padding="12"
                                Background="#F3F9FF"
                                CornerRadius="8">
                                <StackPanel Spacing="5">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon
                                            FontSize="16"
                                            Foreground="#2196F3"
                                            Glyph="&#xE72A;" />
                                        <TextBlock FontWeight="SemiBold" Text="调档申请" />
                                    </StackPanel>
                                    <TextBlock FontSize="12" Text="5 个申请等待处理" />
                                    <Button
                                        Padding="10,6"
                                        HorizontalAlignment="Left"
                                        Content="查看申请"
                                        FontSize="12" />
                                </StackPanel>
                            </Border>

                            <Border
                                Padding="12"
                                Background="#F3FDF0"
                                CornerRadius="8">
                                <StackPanel Spacing="5">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon
                                            FontSize="16"
                                            Foreground="#4CAF50"
                                            Glyph="&#xE8A5;" />
                                        <TextBlock FontWeight="SemiBold" Text="档案归档" />
                                    </StackPanel>
                                    <TextBlock FontSize="12" Text="系统运行正常" />
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
